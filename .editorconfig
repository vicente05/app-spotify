# Editor configuration, see https://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false

[*.js]
quote_type = single
indent_size = 4

[*.css]
quote_type = single
indent_size = 4

[*.html]
quote_type = single
indent_size = 4

[*.scss]
quote_type = single
indent_size = 4

